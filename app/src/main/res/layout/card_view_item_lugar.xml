<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/widthCardView"
    android:layout_height="@dimen/heightCardView"
    android:layout_margin="8dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="@dimen/cardCornerRadius"
    android:clickable="true"

    android:foreground="?android:selectableItemBackground"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imagecardview_id"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/textcardview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="@dimen/textSizeCardView"
            android:gravity="center"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>